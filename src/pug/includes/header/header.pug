include ../mixins
header.header.absolute.w-full.left-0
    .container.margin-center
        .header__block.flex.flex-ai-center.flex-j-between.bg-black.text-white.border-15
            .header__logo
                +picture('img/logo.png', 'img/logo', false, '', 196, 41, '', '', '')
            .header__center.flex.flex-ai-center
                nav.header__nav.flex.flex-ai-center.text-16
                    .header__list
                        ul
                            li
                                a(href="#!") Арендовать
                            li
                                a(href="#!") Купить
                            li
                                a(href="#!") Управление
                            li
                                a(href="#!") Интерьер | Дизайн
                    .header__list-add.relative
                        button(type="submit").header__list-show.flex.flex-ai-center
                            .header__list-span Еще
                            <svg width="10" height="8" viewBox="0 0 10 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M5 8L0.669872 0.5H9.33013L5 8Z" fill="white"/>
                            </svg>
                        .header__list-abs.absolute.bg-black.left-0.w-max.overflow-hidden
                            ul
                                li
                                    a(href="#!") Юридические услуги
                                li
                                    a(href="#!") Партнерская программа
                                li
                                    a(href="#!") Продакшн Студия
                                li
                                    a(href="#!") Сайт основателя
                                li
                                    a(href="#!") Карьера
            .header__right
                .header__langs.flex.flex-ai-center.bg-white.text-black.text-16
                    a(href="#!").header__lang.flex.flex-ai-center.flex-j-center.active Ru
                    a(href="#!").header__lang.flex.flex-ai-center.flex-j-center En